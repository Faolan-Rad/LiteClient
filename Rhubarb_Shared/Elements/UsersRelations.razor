@code {
    public enum RelationsPages
    {
        All,
        Friends,
        Following,
        Blocked,
    }

    public RelationsPages relationsPages = RelationsPages.All;
    public void OpenAll()
    {
        UpdateRelation(RelationsPages.All);
    }
    public void OpenFriends()
    {
        UpdateRelation(RelationsPages.Friends);
    }
    public void OpenFollowing()
    {
        UpdateRelation(RelationsPages.Following);
    }
    public void OpenBlocked()
    {
        UpdateRelation(RelationsPages.Blocked);
    }
    public void UpdateRelation(RelationsPages rp)
    {
        relationsPages = rp;
    }

}
